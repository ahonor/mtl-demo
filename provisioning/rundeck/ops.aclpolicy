description: Acess for ops.
context:
  project: '.*'
for:
  resource:
    - allow: read
  job:
    - match:
        group: ''
        name: '.*'
      allow: [run,read]
  node:
    - allow: [read,run] # allow read/run for all nodes
by:
  group: ops

---

description: Allow read access for projects.
context:
  application: 'rundeck'
for:
  resource:
    - allow: [read]
  project:
    - allow: [read]
by:
  group: [ops]
