<joblist>   
 <job> 
   <name>Status</name>  
   <description>Check the status of the app</description>  
   <loglevel>INFO</loglevel>  
   <multipleExecutions>true</multipleExecutions>     
   <group></group>  
   <context> 
     <options> 

       <option name="dir" enforcedvalues="true" required="true" 
         valuesUrl='http://localhost/${job.project}/options/${job.project}-dir.json'/> 
       </options> 
     </context>  
     <sequence threadcount="1" keepgoing="true" strategy="node-first"> 
       <command> 
        <scripturl>http://localhost/${job.project}/scripts/status.sh</scripturl>
        <scriptargs>${option.dir}</scriptargs>    
        <errorhandler keepgoingOnSuccess='true'>
          <exec>echo "Continuing..."</exec>
        </errorhandler>         
      </command> 
    </sequence>
    <nodefilters excludeprecedence="true"> 
      <include> 
        <tags>www</tags> 
      </include> 
    </nodefilters>  
    <dispatch> 
     <threadcount>1</threadcount>  
     <keepgoing>true</keepgoing> 
   </dispatch> 
 </job>   
</joblist>
